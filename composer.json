{
    "name": "svnldwg/symfony-todo-rest",
    "description": "Basic implementation of a RESTful API to manage ToDo items based on Symfony",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "nelmio/api-doc-bundle": "^4.1",
        "sensio/framework-extra-bundle": "^5.6",
        "symfony/asset": "5.2.*",
        "symfony/console": "5.2.*",
        "symfony/dotenv": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.2.*",
        "symfony/property-access": "5.3.*",
        "symfony/serializer": "5.2.*",
        "symfony/twig-bundle": "5.2.*",
        "symfony/validator": "5.2.*",
        "symfony/yaml": "5.2.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "doctrine/data-fixtures": "^1.4",
        "friendsofphp/php-cs-fixer": "^v2.17.1",
        "infection/infection": "^0.21.0",
        "phpstan/phpstan": "0.12.87",
        "phpstan/phpstan-phpunit": "0.12.17",
        "phpstan/phpstan-symfony": "^0.12.14",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "5.2.*",
        "symfony/maker-bundle": "^1.25"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check": [
            "@cs-check",
            "@analyse"
        ],
        "cs-check": "php-cs-fixer fix --config=dev/csfixer.php_cs --dry-run --diff",
        "analyse": "phpstan analyse -c dev/phpstan.neon --no-progress",
        "phpunit": "php vendor/bin/phpunit"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
